<section>
    <div class="container">
        <div class="row mt-4">
            <a style="width:150px" href="/admin/add-products" class="btn btn-success">Add to Cart</a>
        </div>
        <div class="row mt-4">
                <table class="table mt-2" id="productsTable">
                    <thead>
                        <tr>
                            <th scope="col">Name</th>
                            <th scope="col">Price</th>
                            <th scope="col">Description</th>
                            <th scope="col">Image</th>
                            <th>Options</th>
                        </tr>
                    </thead>
                    {{#each products}}
                    <tbody>
                        <tr>
                            <td>{{this.Name}}</td>
                            <td>{{this.Price}}</td>
                            <td>{{this.Description}}</td>
                            <td><img style="width: 100px;height:100px" src="{{this.img}}" alt=""></td>
                            <td><a href="/admin/edit-products/{{this._id}}" class="btn btn-info">Edit</a>
                            <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are you want to delete {{this.Name}}')">Delete</a>
                            </td>
                        </tr>
                    </tbody>
                    {{/each}}
                </table>
        </div>
    </div>

</section>
